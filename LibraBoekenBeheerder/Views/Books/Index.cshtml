@{
    ViewData["Title"] = "My Books";
}
@model List<BooksModel>;

<p>
    @Html.ActionLink("Create Book", "Create")
</p>

<style>
    body {
        background-color: #fff;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: #016d45;
        color: #fff;
    }
</style>

<h1>@ViewData["Title"]</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Pages</th>
        <th>Pages Read</th>
        <th>Summary</th>
        <th>Details</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.ISBNNumber</td>
            <td>@book.Pages</td>
            <td>@book.PagesRead</td>
            <td>@book.Summary</td>

        </tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=book.BookId})
            @Html.ActionLink("Details", "Details", new { id=book.BookId})
            @Html.ActionLink("Delete", "Delete", new { id=book.BookId})
        </td>
    }
</table>
