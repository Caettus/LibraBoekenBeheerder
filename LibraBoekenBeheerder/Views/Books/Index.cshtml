@model IEnumerable<LibraBoekenBeheerder.Models.BooksModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<style>
    body {
        background-color: #fff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #016d45;
        color: #fff;
    }
</style>

<table id="listView" style="width: 100%;">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Pages</th>
        <th>Pages Read</th>
        <th>Genres</th>
        <th>Actions</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.ISBNNumber</td>
            <td>@book.Pages</td>
            <td>@book.PagesRead</td>
            <td>
                @if (ViewBag.genreDropDownList != null)
                {
                    foreach (var genre in ViewBag.genreDropDownList)
                    {
                        if (genre.Selected)
                        {
                            <span>@genre.Text</span>
                        }
                    }
                }
            </td>
            <td>
                <a asp-action="Details" asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-success">Details</a>
                <a asp-action="Edit" asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-info"
                   style="background-color:#FFE000; border-color:#FFE000">Edit</a>
                <a asp-action="Delete" asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete this book from the records?')">Delete</a>
            </td>
        </tr>
    }
</table>

