@{
    ViewData["Title"] = "My Books";
}
@model List<BooksModel>;

<p>
    @Html.ActionLink("Create Book", "Create")
</p>

<style>
    body {
        background-color: #fff;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: #016d45;
        color: #fff;
    }
</style>

<h1>@ViewData["Title"]</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Pages</th>
        <th>Pages Read</th>
        <th>Summary</th>
        <th>Actions</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.ISBNNumber</td>
            <td>@book.Pages</td>
            <td>@book.PagesRead</td>
            <td>@book.Summary</td>
            <td>
                <a asp-action="Details" asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-success">Details</a>
                <a asp-action="Edit"  asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-info" style="background-color:#FFE000; border-color:#FFE000">Edit</a>
                <a asp-action="Delete" asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book from the records?')">Delete</a>
            </td>
        </tr>
    }
</table>
