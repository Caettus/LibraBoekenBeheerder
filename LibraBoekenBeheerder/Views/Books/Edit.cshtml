@model LibraBoekenBeheerder.Models.BooksModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<form asp-controller="Books" asp-action="Edit">
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            <h5>Update a Book</h5>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
            <input type="text" asp-for="Title" placeholder="Title of Book" />
            <input type="text" asp-for="Author" placeholder="Author of Book" />
            <input type="text" asp-for="ISBNNumber" placeholder="ISBNNumber of Book" />
            <input type="number" asp-for="Pages" placeholder="Pages of Book" />
            <input type="number" asp-for="PagesRead" placeholder="Pages already read" />
            <input type="text" asp-for="Summary" placeholder="Short summary of the Book" />
    
            <select asp-for="SelectedCollectionId" asp-items="ViewBag.collectionDropDownList" style="width: 150px;"></select>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Edit" class="btn btn-default" />
                </div>
            </div>
    
            <h3>@ViewBag.Message</h3>
        </div>
    
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            ViewBag.Message = $"{error.ErrorMessage}";
        }
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
