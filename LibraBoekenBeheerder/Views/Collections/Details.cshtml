@model LibraBoekenBeheerder.Models.CollectionsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Collections</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CollectionID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CollectionID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <table>
        <tr>
            <th>Books</th>
        </tr>
        @foreach (BooksModel book in ViewBag.collectionBooksList)
        {
            <tr>
                <td>@book.Title</td>
                <td>
                    <a asp-action="Details" asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-success">Details</a>
                    <a asp-action="Edit" asp-controller="Books" asp-route-id="@book.BookId" class="btn btn-info" style="background-color:#FFE000; border-color:#FFE000">Edit</a>
                    <a asp-action="DeleteBook" asp-controller="Collections" asp-route-collectionID="@Model.CollectionID" asp-route-bookID="@book.BookId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book from the records?')">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
