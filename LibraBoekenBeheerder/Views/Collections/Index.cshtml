@{
    ViewData["Title"] = "My Collections";
}
@model List<CollectionsModel>;

<p>
    @Html.ActionLink("Create New Collection", "Create")
</p>

<style>
    body {
        background-color: #fff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #016d45;
        color: #fff;
    }
</style>

<h1>@ViewData["Title"]</h1>

<table>
    <tr>
        <th>Collection ID</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var collection in Model)
    {
        <tr>
            <td>@collection.CollectionID</td>
            <td>@collection.Name</td>
            <td>
                <a asp-action="Edit" asp-controller="Collections" asp-route-id="@collection.CollectionID" class="btn btn-info" style="background-color:#FFE000; border-color:#FFE000">Edit</a>
                <a asp-action="Details" asp-controller="Collections" asp-route-id="@collection.CollectionID" class="btn btn-success">Details</a>
                <a asp-action="Delete" asp-controller="Collections" asp-route-id="@collection.CollectionID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this collection from the records?')">Delete</a>
            </td>
        </tr>
    }
</table>
